<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity"
    android:background="@color/colorBackgroundAllActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_back"
            android:fontFamily="@font/bold"
            android:gravity="right|center"
            android:text="ساخت حساب کاربری جدید"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/back"
            android:rotation="-180"
            android:padding="3dp"
            android:layout_marginTop="2dp"
            android:tint="@color/colorWhite" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_email"
        android:visibility="visible"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/colorBackgroundAllActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray700"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:text="آدرس ایمیل خود را وارد نمایید"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray600"
            android:fontFamily="@font/regular"
            android:textSize="14sp"
            android:text="یک کد ، برای تایید این ایمیل برای شما ارسال خواهد شد"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_getemail"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray700"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/colorWhite"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_getemail"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="ادامه"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_code"
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/colorBackgroundAllActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray700"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:text="کد تایید را وارد نمایید"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray600"
            android:fontFamily="@font/regular"
            android:textSize="14sp"
            android:lineSpacingExtra="8dp"
            android:text="کد تایید برای ایمیل شما ارسال گردیده است . در صورت عدم مشاهده لطفا پوشه Spam رو بررسی نمایید"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_getcode"
            android:inputType="number"
            android:maxLength="4"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray700"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/colorWhite"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_getcode"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="ادامه"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_password"
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/colorBackgroundAllActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray700"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:text="کلمه عبور خود را وارد نمایید"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray600"
            android:fontFamily="@font/regular"
            android:textSize="14sp"
            android:lineSpacingExtra="8dp"
            android:text="کلمه عبور شما باید حداقل 6 عدد باشد"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_getpass"
            android:inputType="number"
            android:maxLength="16"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray700"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/colorWhite"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_getpass"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="تایید"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>